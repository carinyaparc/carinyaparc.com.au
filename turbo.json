{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": ["NODE_ENV", "MAILERLITE_API_KEY", "NEXT_PUBLIC_GTM_ID"]
    },
    "lint": {
      "env": ["NODE_ENV", "MAILERLITE_API_KEY", "NEXT_PUBLIC_GTM_ID"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV", "MAILERLITE_API_KEY", "NEXT_PUBLIC_GTM_ID"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/**/*.ts", "tests/**/*.tsx"],
      "env": ["NODE_ENV"]
    },
    "test:watch": {
      "cache": false,
      "dependsOn": ["^build"],
      "env": ["NODE_ENV"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "env": ["NODE_ENV"]
    },
    "test:unit": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/unit/**/*.ts", "tests/unit/**/*.tsx"],
      "env": ["NODE_ENV"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**/*.tsx",
        "src/**/*.ts",
        "tests/integration/**/*.ts",
        "tests/integration/**/*.tsx"
      ],
      "env": ["NODE_ENV"]
    },
    "test:smoke": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/smoke/**/*.ts", "tests/smoke/**/*.tsx"],
      "env": ["NODE_ENV"]
    },
    "test:ci": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.tsx", "src/**/*.ts", "tests/**/*.ts", "tests/**/*.tsx"],
      "outputs": ["junit.xml"],
      "env": ["NODE_ENV", "CI"]
    },
    "clean": {
      "cache": false
    },
    "typecheck": {
      "env": ["NODE_ENV", "MAILERLITE_API_KEY", "NEXT_PUBLIC_GTM_ID"]
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "MAILERLITE_API_KEY",
    "NEXT_PUBLIC_GTM_ID",
    "CI",
    "NEXT_RUNTIME",
    "SESSION_SECRET",
    "SECURITY_CSP_ENABLED",
    "SECURITY_CSP_REPORT_ONLY",
    "SECURITY_CACHE_ENABLED",
    "SECURITY_CSP_REPORT_URI"
  ]
}
