{
  "extends": "./packages/typescript-config/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/site/*"],
      "@/src/*": ["apps/site/src/*"],
      "@site/*": ["apps/site/src/*"]
    }
  },
  "include": ["tests/**/*", "apps/site/**/*"],
  "exclude": ["node_modules", "**/node_modules", ".next", "coverage"]
}
